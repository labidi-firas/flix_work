                        <Image url="@../Image/app-dev.jpg" />
                     </image>
                  </ImageView>
                  <!-- Additional ImageViews removed for brevity -->
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
   <styleClass>
      <String fx:value="job-item" />
      <String fx:value="shadow" />
   </styleClass>
</AnchorPane>
