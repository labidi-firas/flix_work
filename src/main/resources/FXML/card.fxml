<AnchorPane onMousePressed="#click" prefHeight="248.0" prefWidth="289.0" stylesheets="@../values/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flix_work.controller.CardController">
   <children>
      <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="248.0" prefWidth="329.0">
         <content>
            <VBox alignment="TOP_CENTER" prefHeight="246.0" prefWidth="292.0" spacing="10.0" stylesheets="@BackDesign.css">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label fx:id="jobTitleLabel" prefHeight="40.0" prefWidth="238.0" text="Software Engineer">
