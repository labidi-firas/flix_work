<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="white-bg" stylesheets="@BackDesign.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flix_work.controller.AddJobController">
    <children>
        <!-- Job Title -->
        <Label layoutX="40.0" layoutY="43.0" prefHeight="17.0" prefWidth="76.0" stylesheets="@BackDesign.css" text="Job Title:" />
        <TextField fx:id="TitleFild" layoutX="42.0" layoutY="67.0" prefWidth="200.0" styleClass="textfield" stylesheets="@BackDesign.css" />

        <!-- Job Type -->
        <Label layoutX="40.0" layoutY="106.0" prefHeight="17.0" prefWidth="76.0" stylesheets="@BackDesign.css" text="Job Type:" />
        <TextField fx:id="JobTypeFld" layoutX="43.0" layoutY="130.0" prefWidth="200.0" styleClass="textfield" stylesheets="@BackDesign.css" />

        <!-- Description -->
        <Label layoutX="40.0" layoutY="172.0" prefHeight="17.0" prefWidth="76.0" stylesheets="@BackDesign.css" text="Description:" />
        <TextField fx:id="DescriptionFld" layoutX="44.0" layoutY="196.0" prefHeight="88.0" prefWidth="200.0" styleClass="textfield" stylesheets="@BackDesign.css" />

        <!-- Deadline -->
        <Label layoutX="40.0" layoutY="289.0" prefHeight="17.0" prefWidth="76.0" stylesheets="@BackDesign.css" text="Deadline:" />
        <DatePicker fx:id="DeadlineFld" layoutX="40.0" layoutY="306.0" prefWidth="200.0" styleClass="textfield" stylesheets="@BackDesign.css" />

        <!-- Salary -->
        <Label layoutX="40.0" layoutY="343.0" prefHeight="17.0" prefWidth="76.0" stylesheets="@BackDesign.css" text="Salary:" />
        <TextField fx:id="SalaryFld" layoutX="43.0" layoutY="367.0" prefWidth="200.0" styleClass="textfield" stylesheets="@BackDesign.css" />

        <!-- Category -->
        <Label layoutX="294.0" layoutY="43.0" prefHeight="17.0" prefWidth="76.0" stylesheets="@BackDesign.css" text="Category:" />
        <ComboBox fx:id="Categoriefld" layoutX="294.0" layoutY="67.0" prefWidth="150.0" styleClass="textfield" stylesheets="@BackDesign.css" />

        <!-- Buttons -->
        <Button layoutX="300.0" layoutY="130.0" mnemonicParsing="false" onMouseClicked="#Save" prefHeight="25.0" prefWidth="105.0" styleClass="add-btn" stylesheets="@BackDesign.css" text="Add" />
        <Button layoutX="441.0" layoutY="130.0" mnemonicParsing="false" onMouseClicked="#Clean" prefHeight="25.0" prefWidth="105.0" styleClass="clear-btn" stylesheets="@BackDesign.css" text="Clean" />
    </children>
</AnchorPane>
